<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.CustomViews.DropdownView">
  <ContentView.Content>
        <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="#808080">
            <SearchBar AbsoluteLayout.LayoutBounds="0,20,350,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Frame AbsoluteLayout.LayoutBounds="0.1,0.1,1,1" AbsoluteLayout.LayoutFlags="YProportional,XProportional, SizeProportional,WidthProportional,PositionProportional" BackgroundColor="#808080">
                <ListView 
                Background="#fff">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Home</x:String>
                        <x:String>Schoold</x:String>
                        <x:String>Work</x:String>
                    </x:Array>
                </ListView.ItemsSource>
                </ListView>
            </Frame>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>